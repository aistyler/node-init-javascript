{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/src/*": [
        "./src/*"
      ],
      "@/lib/*": [
        "./src/lib/*"
      ]
    }
  },
  "babel": {
    "@/src": "./src",
    "@/lib": "./src/lib"
  },
  "jest": {
    "^@/src/(.*)$": "<rootDir>/src/$1",
    "^@/lib/(.*)$": "<rootDir>/src/lib/$1"
  }
}
